<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <h3 class="text-left">{{burger_name}} <button class="devourButton">Devour!</button></h3>
    {{/unless}}
  {{/each}}
</ul>

<form action="/burgers" method="POST">
  <input type="text" id="name" name="burger_name" placeholder="Your Burger Here">
  <button type="submit" class="addBurgerButton">Add The Burger</button>
</form>
  